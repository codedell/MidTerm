@model IEnumerable<DellMT.Models.Student>
@{
    ViewBag.Title = "Students";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Students</h2>
@if (!Model.Any())
{
    <p>We don't have any Students yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Student ID</th>
                <th>First Name</th>
                <th>Last Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@Html.ActionLink(student.FirstName, "Edit", "Students", new { id = student.Id }, null)</td>
                    <td>@student.LastName</td>
                </tr>
            }
        </tbody>
    </table>
}
