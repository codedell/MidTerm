@model IEnumerable<DellMT.Models.Course>
@{
    ViewBag.Title = "Courses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Courses</h2>

<p>
    @Html.ActionLink("New Course", "New", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Course</th>
            <th>Course Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@Html.ActionLink(course.CourseName, "Details", "Courses", new { id = course.Id }, null)</td>
                <td>@course.CourseDescription</td>
            </tr>
        }
    </tbody>
</table>

